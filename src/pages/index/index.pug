include ../../pug/weui-mixins
.page
    +page-bd
        - var navbars = [{title: '成都'}, { title: '今天' }, { title: '明天' }, { title: '后天' }]
        .weui-tab
            .weui-navbar
                each el, i in navbars
                    .weui-navbar__item(@tap="navbarTap"
                        data-index=i :class="{ 'weui-bar__item_on': currentTabIndex === " + i + " }")
                        .weui-navbar__title=el.title
                    .weui-navbar__slider(style="left: {{sliderLeft + sliderOffset}}px")
            .weui-tab__panel
        +weui-search-bar('搜索活动、俱乐部、地址')
        .float-btn(@tap="floatBtnTap")
            .icon.plus-white
        scroll-view.weui-panel.weui-panel__access(
            :scroll-y="true"
            :show="!inputVal"
            :enable-back-to-top="true"
            bindscrolltolower="loadMore"
            style="height: {{windowHeight - 100}}px")
            +weui-panel-bd
                block(:for="(el, index) in list")
                    navigator.weui-media-box.weui-media-box_appmsg(url='activityDetail' hover-class="weui-cell_active" @tap="go(index, aa, cc)")
                        .weui-media-box__hd.weui-media-box__hd_in-appmsg
                            image.weui-media-box__thumb(src="./img/lcw.jpg")
                        .weui-media-box__bd.weui-media-box__bd_in-appmsg
                            .weui-media-box__title {{el.name}}
                            .weui-media-box__desc 某某某球馆 0.1km
                            .weui-media-box__desc
                                .left 16:00-18:00 报名中
                                .right 
                                    text 8/12人
        